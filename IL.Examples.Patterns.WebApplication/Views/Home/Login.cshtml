<div class="container" style="padding:10px;" ng-show="!IsAuthenticated">

    <form name="form" novalidate class="form-signin" autocomplete="off" >
        <h2>Anmeldung</h2>                                                                                      
        <input type="text" class="input-block-level" placeholder="Benutzername" autofocus ng-model="LoginModel.Name"  required="required" />
        <input type="password" class="input-block-level" placeholder="Passwort" ng-model="LoginModel.Password"  required="required" />                      

        <input type="checkbox" ng-model="LoginModel.RememberMe" />

        eingeloggt bleiben?
    
        <br /><br />
        <button class="btn btn-large btn-primary btn-block" ng-click="Login()" ng-disabled="form.$invalid">login</button>
        <br />                                                                                              
    </form>

    <div class="alert alert-error" ng-show="ErrorMessage != null">
        <button type="button" class="close" ng-click="ErrorMessage = null">&times;</button>
        {{ErrorMessage}}
    </div>

